<style>
    #loader,
    #sidebarLoader {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
    }
</style>
<script>
    // Create the loader dynamically for main content
    const loader = $('<div>', { id: 'loader', class: 'loader--roller perpel_loder mb_30' });
    for (let i = 0; i < 8; i++) {
        $('<div>').appendTo(loader);
    }
    $(".main_content").hide();
    $('body').append(loader);

    // Create the loader dynamically for sidebar
    const sidebarLoader = $('<div>', { id: 'sidebarLoader', class: 'loader--roller perpel_loder mb_30' });
    for (let i = 0; i < 8; i++) {
        $('<div>').appendTo(sidebarLoader);
    }
    $(".sidebar").hide();
    $('body').append(sidebarLoader);

    // Function to remove both loaders after a certain duration
    function hideLoaders() {
        $('#loader, #sidebarLoader').fadeOut(100, () => { // Adjust duration here (in milliseconds)
            $('#loader, #sidebarLoader').remove();
            $(".main_content, .sidebar").show();
        });
    }

    // Function to perform a hard refresh
    function hardRefreshPage() {
        location.reload(true); // true parameter forces a hard refresh
    }

    // Disable the page until content loads and then hide loaders
    $(document).ready(() => {
        $('body').css('pointer-events', 'none');
        setTimeout(() => {
            hideLoaders();
            $('body').css('pointer-events', 'auto');
        }, 100); // Trigger after 0.5 seconds
    });

    // Attach the hard refresh function to the beforeunload event
    $(window).on('beforeunload', function () {
        hardRefreshPage();
    });
</script>
